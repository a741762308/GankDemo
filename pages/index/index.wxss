/**index.wxss**/

page, .page {
  height: 100%;
  width: 100%;
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
}

.tab-swiper {
  margin-top: 0rpx;
  height: 100%;
  width: 100%;
  background-color: white;
}

.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
}

.tab-item {
  margin: 0 36rpx;
  width: -1;
  text-align: center;
  display: inline-block;
}

.tab-item.active {
  color: #4675f9;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

.item-ans {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  margin: 20rpx;
  box-sizing: border-box;
  border: 1px;
  background: #fff;
  border-radius: 10rpx;
}

.content {
  position: relative;
  margin-bottom: 20rpx;
}

.mask {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.font {
  font-size: 14px;
}

.tab-content {
  flex-grow: 1;
  height: 100%;
}

.scoll-h {
  height: 100%;
}

.fuli-view {
  column-count: 2;
  column-gap: 2px;
  width: 100%;
}

.youku-view {
  column-count: 3;
  column-gap: 2px;
  width: 100%;
}

.fuli {
  width: 95%;
  background: #fefefe;
  border: 2px solid #fcfcfc;
  box-shadow: 0px 2px 2px rgba(34, 25, 25, 0.4);
  margin: 5px 2px 2px 2px;
  padding: 1px;
  padding-bottom: 5px;
  transition: opacity 0.4s ease-in-out;
  display: inline-block;
}

.fuli-image {
  width: 100% !important;
  display: inline-block;
}

/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

/* 主页 */

.home {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: white;
  z-index: 1;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
  display: flex;
  flex-direction: column;
}

/* 遮罩层 */

.bg {
  display: none;
  position: fixed;
  top: 0%;
  left: 70%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  transition: width 2s;
  filter: alpha(opacity=70);
}

/* 侧滑栏 */

.page_tab {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: white;
  z-index: 0;
}

.slide-top {
  background: linear-gradient(-90deg, #81c784, #4caf50, #2e7d32);
  height: 320rpx;
  padding-top: 40rpx;
}

.oval-logo {
  height: 100rpx;
  width: 100rpx;
  margin-left: 20rpx;
  background-color: #4a93e2;
  border-radius: 50%;
  display: flex;
  padding: 10rpx;
  align-items: center;
}

.weather {
  bottom: 0px;
  right: 0px;
  margin-right: 10rpx;
  align-items: center;
}

.radio-group {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.radio-item {
  padding: 0 18rpx;
  width: 70%;
  line-height: 80rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.radio-item.active {
  color: #4a93e2;
  background-color: rgba(0, 0, 0, 0.1);
}
